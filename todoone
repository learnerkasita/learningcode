import os

TODO_FILE = "todo.txt"

def load_tasks():
    """Load tasks from the file."""
    if not os.path.exists(TODO_FILE):
        return []
    with open(TODO_FILE, "r") as f:
        return [line.strip() for line in f.readlines()]

def save_tasks(tasks):
    """Save tasks to the file."""
    with open(TODO_FILE, "w") as f:
        for task in tasks:
            f.write(task + "\n")

def show_tasks(tasks):
    """Display all tasks."""
    if not tasks:
        print("\nâœ… No tasks in your To-Do list!\n")
    else:
        print("\nðŸ“‹ Your To-Do List:")
        for i, task in enumerate(tasks, start=1):
            print(f"{i}. {task}")
    print()

def add_task(tasks):
    """Add a new task."""
    task = input("Enter a new task: ").strip()
    if task:
        tasks.append(task)
        save_tasks(tasks)
        print("âœ… Task added successfully!\n")

def remove_task(tasks):
    """Remove a task by its number."""
    show_tasks(tasks)
    try:
        num = int(input("Enter the task number to remove: "))
        if 1 <= num <= len(tasks):
            removed = tasks.pop(num - 1)
            save_tasks(tasks)
            print(f"ðŸ—‘ï¸ Removed: {removed}\n")
        else:
            print("âŒ Invalid task number!\n")
    except ValueError:
        print("âš ï¸ Please enter a valid number!\n")

def main():
    tasks = load_tasks()
    while True:
        print("====== TO-DO LIST MENU ======")
        print("1. View Tasks")
        print("2. Add Task")
        print("3. Remove Task")
        print("4. Exit")
        choice = input("Enter your choice (1-4): ").strip()
        
        if choice == "1":
            show_tasks(tasks)
        elif choice == "2":
            add_task(tasks)
        elif choice == "3":
            remove_task(tasks)
        elif choice == "4":
            print("ðŸ‘‹ Exiting... Goodbye!")
            break
        else:
            print("âŒ Invalid option, try again!\n")

if __name__ == "__main__":
    main()
